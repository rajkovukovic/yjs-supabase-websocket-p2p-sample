NEXT_PUBLIC_SUPABASE_URL="https://xxxxxxxxxx.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR_KEY"

# WebSocket URLs - use ws:// for development, wss:// for production (SSL)
# For Traefik domains, use wss:// if SSL is configured

# Hocuspocus WebSocket server (required) - provides authoritative sync and persistence
NEXT_PUBLIC_HOCUSPOCUS_URL=wss://yjs-draw-hocuspocus.my-domain.com

# Signaling server for WebRTC P2P (optional but recommended)
# Enables direct peer-to-peer connections for faster collaboration
# If not set, only Hocuspocus WebSocket sync will be used
NEXT_PUBLIC_SIGNALING_URL=wss://yjs-draw-signal.my-domain.com

# WebRTC room password (optional) - adds security to P2P rooms
# All users must use the same password to connect in the same room
NEXT_PUBLIC_WEBRTC_PASSWORD=your-secure-password

# Local development (alternative)
# NEXT_PUBLIC_HOCUSPOCUS_URL=ws://localhost:1234
# NEXT_PUBLIC_SIGNALING_URL=ws://localhost:4444
