{
  "name": "collaborative-editor-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:hocuspocus": "tsx watch hocuspocus-server.ts",
    "dev:y-webrtc": "tsx watch y-webrtc-signaling.ts",
    "dev": "concurrently \"npm run dev:hocuspocus\" \"npm run dev:y-webrtc\"",
    "build": "tsc",
    "start:hocuspocus": "node dist/hocuspocus-server.js",
    "start:y-webrtc": "node dist/y-webrtc-signaling.js",
    "start": "concurrently \"npm run start:hocuspocus\" \"npm run start:y-webrtc\"",
    "verify": "node scripts/verify-setup.js",
    "test:connection": "node scripts/test-connection.js"
  },
  "dependencies": {
    "yjs": "^13.6.10",
    "@hocuspocus/server": "^2.13.5",
    "@hocuspocus/extension-database": "^2.13.5",
    "@supabase/supabase-js": "^2.45.4",
    "lib0": "^0.2.98",
    "dotenv": "^16.4.5",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/node": "^22.7.9",
    "@types/ws": "^8.5.10",
    "tsx": "^4.19.2",
    "concurrently": "^9.1.0"
  }
}

